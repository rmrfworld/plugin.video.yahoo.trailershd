<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.yahoo.trailershd"
       name="Yahoo Movie Trailers"
       version="1.0.0"
       provider-name="EbiL">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Yahoo Movie Trailers</summary>
        <description lang="en">This XBMC plugin enables you to watch HD (1080, 720, 480) videos from Yahoo Movie Trailers. Includes "Opening this week" "Top Box Office" "Coming soon" categories. In addition, respective showtimes for each title in your area.</description>
    </extension>
</addon>
